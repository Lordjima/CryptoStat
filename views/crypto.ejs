<% var rootPath = './'; %>
<%- include(rootPath + 'struct/header.ejs') -%>
<%- include(rootPath + 'struct/navbar.ejs') -%>
<div class="container-fluid margin-top text-center">
    <div class="row">
        <div class="col-sm-7 my-4">
            <div class="card">
                <h5 class="card-header h5 bg-blue">Bitfinex (BTC/USD)</h5>
                <div class="card-body">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <th scope="col">Open price</th>
                                <th scope="col">Close price</th>
                                <th scope="col">Higher price</th>
                                <th scope="col">Lower price</th>
                                <th scope="col">Volume</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( var index in dataBitfinex ){ %>
                            <tr>
                                <th scope="row"><%= new Date(dataBitfinex[index]["Timestamp"]).getDate() %>/<%= ((new Date(dataBitfinex[index]["Timestamp"]).getMonth() + 1 < 10) ? "0" + (new Date(dataBitfinex[index]["Timestamp"]).getMonth() + 1) : (new Date(dataBitfinex[index]["Timestamp"]).getMonth() + 1)) %></th>
                                <td><%= ((new Date(dataBitfinex[index]["Timestamp"]).getHours() < 10) ? "0" + new Date(dataBitfinex[index]["Timestamp"]).getHours() : new Date(dataBitfinex[index]["Timestamp"]).getHours()) %>:<%= ((new Date(dataBitfinex[index]["Timestamp"]).getMinutes() < 10) ? "0" + new Date(dataBitfinex[index]["Timestamp"]).getMinutes() : new Date(dataBitfinex[index]["Timestamp"]).getMinutes()) %></td>
                                <td><%= dataBitfinex[index]["OpenPrice"] %></td>
                                <td><%= dataBitfinex[index]["ClosePrice"] %></td>
                                <td><%= dataBitfinex[index]["Highest"] %></td>
                                <td><%= dataBitfinex[index]["Lowest"] %></td>
                                <td><%= dataBitfinex[index]["Volume"] %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div> 
        </div>
        <div class="col-sm-5 my-4">
            <div class="card">
                <h5 class="card-header h5 bg-blue">Kraken (BTC/USD)</h5>
                <div class="card-body">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Price</th>
                                <th scope="col">Volume</th>
                                <th scope="col">Time</th>
                                <th scope="col">Buy/Sell</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( var indexK in dataKraken ){ %>
                            <tr>
                                <th scope="row"><%= dataKraken[indexK]["Price"] %></th>
                                <td><%= dataKraken[indexK]["Volume"] %></td>
                                <td><%= new Date( dataKraken[indexK]["Timestamp"].split('.')[0] * 1000) %></td>
                                <td><%= dataKraken[indexK]["Method"] %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div> 
        </div>
    </div>
</div>
<%- include(rootPath + 'struct/footer.ejs') -%>